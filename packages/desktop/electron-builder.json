{
  "appId": "com.rms.desktop",
  "productName": "Restaurant Management System",
  "copyright": "Copyright Â© 2024 Restaurant Management System",
  "electronVersion": "28.1.0",
  "electronLanguages": [
    "en-US"
  ],
  "directories": {
    "output": "release",
    "buildResources": "build"
  },
  "includeSubNodeModules": true,
  "files": [
    "dist/**/*",
    "node_modules/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "../server/dist",
      "to": "server/dist",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "../server/prisma",
      "to": "server/prisma",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "../server/public",
      "to": "server/public",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "../../node_modules",
      "to": "server/node_modules",
      "filter": [
        "**/*",
        "!electron",
        "!electron-builder",
        "!typescript",
        "!@types/*"
      ]
    },
    {
      "from": ".next/standalone",
      "to": "nextjs/standalone",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": ".next/static",
      "to": "nextjs/standalone/.next/static",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "public",
      "to": "nextjs/standalone/public",
      "filter": [
        "**/*"
      ]
    }
  ],
  "asarUnpack": [
    "node_modules/better-sqlite3/**/*",
    "node_modules/@prisma/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "icon": "build/icon.ico",
    "artifactName": "${productName}-Setup-${version}-${arch}.${ext}",
    "publisherName": "Restaurant Management System",
    "verifyUpdateCodeSignature": false,
    "requestedExecutionLevel": "asInvoker"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Restaurant Management System",
    "installerIcon": "build/icon.ico",
    "uninstallerIcon": "build/icon.ico",
    "deleteAppDataOnUninstall": false,
    "runAfterFinish": false,
    "perMachine": false,
    "allowElevation": true,
    "include": null,
    "script": null,
    "warningsAsErrors": false
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      {
        "target": "zip",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "icon": "build/icon.icns",
    "category": "public.app-category.business",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist"
  },
  "dmg": {
    "title": "${productName} ${version}",
    "icon": "build/icon.icns",
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ],
    "window": {
      "width": 540,
      "height": 380
    }
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "deb",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "build/icons",
    "category": "Office",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "compression": "maximum",
  "asar": true
}