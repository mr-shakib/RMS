{
  "name": "restaurant-management-system",
  "version": "1.0.0",
  "private": true,
  "description": "Restaurant Management System with Electron, Next.js, and Express",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:desktop\"",
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:desktop": "npm run dev --workspace=packages/desktop",
    "dev:pwa": "npm run dev --workspace=packages/pwa",
    "build": "npm run build --workspace=packages/desktop",
    "build:dev": "npm run build:dev --workspace=packages/desktop",
    "build:staging": "npm run build:staging --workspace=packages/desktop",
    "build:server": "npm run build --workspace=packages/server",
    "build:pwa": "npm run build:pwa --workspace=packages/server",
    "package": "npm run package --workspace=packages/desktop",
    "package:win": "npm run package:win --workspace=packages/desktop",
    "package:mac": "npm run package:mac --workspace=packages/desktop",
    "package:linux": "npm run package:linux --workspace=packages/desktop",
    "package:win:staging": "npm run package:win:staging --workspace=packages/desktop",
    "package:mac:staging": "npm run package:mac:staging --workspace=packages/desktop",
    "version:major": "npm run version:major --workspace=packages/desktop",
    "version:minor": "npm run version:minor --workspace=packages/desktop",
    "version:patch": "npm run version:patch --workspace=packages/desktop",
    "setup:pwa": "node scripts/setup-pwa.js",
    "clean": "npm run clean --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "app-builder-bin": "^4.2.0",
    "app-builder-lib": "^26.0.12",
    "builder-util": "^26.0.11",
    "electron-builder": "^26.0.12",
    "node-thermal-printer": "^4.5.0"
  }
}
