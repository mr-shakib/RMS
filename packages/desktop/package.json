{
  "name": "@rms/desktop",
  "version": "1.0.0",
  "private": true,
  "description": "Electron desktop application with Next.js frontend",
  "main": "./dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "node scripts/build.js production",
    "build:next": "next build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "package": "electron-builder --config electron-builder.json --win --x64",
    "package:dir": "electron-builder --config electron-builder.json --dir",
    "build:all": "npm run build && npm run package",
    "clean": "rimraf .next dist release temp-prod"
  },
  "devDependencies": {
    "@electron/notarize": "^2.2.1",
    "@heroicons/react": "^2.2.0",
    "@rms/shared": "*",
    "@tanstack/react-query": "^5.17.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^39.2.5",
    "electron-builder": "^24.9.1",
    "lucide-react": "^0.553.0",
    "multer": "^2.0.2",
    "next": "^14.0.4",
    "node-thermal-printer": "^4.5.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "socket.io-client": "^4.6.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "zustand": "^4.4.7"
  },
  "author": {
    "name": "Restaurant Management System",
    "email": "support@rms-system.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/restaurant-management-system.git"
  },
  "build": {
    "electronVersion": "32.2.7"
  }
}
