{
  "name": "@rms/desktop",
  "version": "1.0.0",
  "private": true,
  "description": "Electron desktop application with Next.js frontend",
  "main": "./dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:electron\"",
    "dev:next": "next dev -p 3000",
    "dev:electron": "wait-on http://localhost:3000 && electron .",
    "build": "npm run build:next && npm run build:electron",
    "build:next": "next build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:electron:full": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "start": "electron .",
    "clean": "rimraf .next dist out"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@rms/shared": "*",
    "@tanstack/react-query": "^5.17.9",
    "next": "^14.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.6.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.rms.desktop",
    "productName": "Restaurant Management System",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*",
      ".next/**/*",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.business"
    }
  }
}
