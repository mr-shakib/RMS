{
  "name": "@rms/desktop",
  "version": "1.0.0",
  "private": true,
  "description": "Electron desktop application with Next.js frontend",
  "main": "./dist/electron/main.js",
  "scripts": {
    "dev": "next dev",
    "dev:next": "next dev -p 3000",
    "dev:electron": "npm run build:electron && wait-on http://localhost:3000 && electron .",
    "build": "npm run build:next && npm run build:electron",
    "build:next": "next build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "verify": "node scripts/verify-package.js",
    "package": "node scripts/package.js all production",
    "package:win": "npm run build && electron-builder --win --config electron-builder.json",
    "package:mac": "node scripts/package.js mac production",
    "package:linux": "node scripts/package.js linux production",
    "package:win:staging": "node scripts/package.js win staging",
    "package:mac:staging": "node scripts/package.js mac staging",
    "version:major": "node scripts/version.js major",
    "version:minor": "node scripts/version.js minor",
    "version:patch": "node scripts/version.js patch",
    "icons:placeholder": "node scripts/create-placeholder-icons.js",
    "icons:create": "node scripts/create-basic-icons.js",
    "start": "electron .",
    "clean": "rimraf .next dist out release"
  },
  "devDependencies": {
    "@electron/notarize": "^2.2.1",
    "@heroicons/react": "^2.2.0",
    "@rms/shared": "*",
    "@tanstack/react-query": "^5.17.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^39.2.5",
    "electron-builder": "^24.9.1",
    "lucide-react": "^0.553.0",
    "multer": "^2.0.2",
    "next": "^14.0.4",
    "node-thermal-printer": "^4.5.0",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "socket.io-client": "^4.6.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "zustand": "^4.4.7"
  },
  "author": {
    "name": "Restaurant Management System",
    "email": "support@rms-system.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/restaurant-management-system.git"
  }
}
