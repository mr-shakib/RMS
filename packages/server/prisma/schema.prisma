generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique(map: "sqlite_autoindex_User_2")
  password  String
  role      String   @default("WAITER")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Table {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  qrCodeUrl String
  status    String   @default("FREE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders     Order[]
}

model Category {
  id                     String                   @id @default(uuid())
  name                   String                   @unique
  isBuffet               Boolean                  @default(false)
  buffetPrice            Float?
  sortOrder              Int                      @default(0)
  createdAt              DateTime                 @default(now())
  updatedAt              DateTime                 @updatedAt
  menuItems              MenuItem[]               @relation("ItemCategory")
  buffetMenuItems        MenuItemBuffetCategory[]
  orders                 Order[]
  printerMappings        PrinterCategory[]

  @@index([sortOrder])
}

model MenuItem {
  id                     String                   @id @default(uuid())
  itemNumber             Int?                     @unique
  name                   String
  categoryId             String
  price                  Float
  description            String?
  imageUrl               String?
  available              Boolean                  @default(true)
  alwaysPriced           Boolean                  @default(false)
  createdAt              DateTime                 @default(now())
  updatedAt              DateTime                 @updatedAt
  category               Category                 @relation("ItemCategory", fields: [categoryId], references: [id])
  buffetCategories       MenuItemBuffetCategory[]
  orderItems             OrderItem[]

  @@index([itemNumber])
  @@index([categoryId])
  @@index([available])
}

model Order {
  id               String      @id @default(uuid())
  tableId          Int
  status           String      @default("PENDING")
  isBuffet         Boolean     @default(false)
  buffetCategoryId String?
  subtotal         Float
  tax              Float
  discount         Float       @default(0)
  serviceCharge    Float       @default(0)
  tip              Float       @default(0)
  total            Float
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
  buffetCategory   Category?   @relation(fields: [buffetCategoryId], references: [id])
  items            OrderItem[]
  payment          Payment?
  table            Table         @relation(fields: [tableId], references: [id])

  @@index([tableId])
  @@index([status])
  @@index([createdAt])
  @@index([buffetCategoryId])
}

model OrderItem {
  id         String   @id @default(uuid())
  orderId    String
  menuItemId String
  quantity   Int
  price      Float
  notes      String?
  createdAt  DateTime @default(now())
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@index([orderId])
  @@index([menuItemId])
}

model Payment {
  id        String   @id @default(uuid())
  orderId   String   @unique
  amount    Float
  method    String
  reference String?
  createdAt DateTime @default(now())
  order     Order    @relation(fields: [orderId], references: [id])

  @@index([createdAt])
}

model Setting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}

model Printer {
  id              String            @id @default(uuid())
  name            String
  type            String            @default("network")
  ipAddress       String
  port            Int               @default(9100)
  isActive        Boolean           @default(true)
  sortOrder       Int               @default(0)
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  categoryMappings PrinterCategory[]

  @@index([isActive])
  @@index([sortOrder])
}

model PrinterCategory {
  id         String   @id @default(uuid())
  printerId  String
  categoryId String
  createdAt  DateTime @default(now())
  category   Category @relation(fields: [categoryId], references: [id])
  printer    Printer  @relation(fields: [printerId], references: [id], onDelete: Cascade)

  @@unique([printerId, categoryId])
  @@index([printerId])
  @@index([categoryId])
}

model MenuItemBuffetCategory {
  id               String   @id @default(uuid())
  menuItemId       String
  buffetCategoryId String
  createdAt        DateTime @default(now())
  menuItem         MenuItem @relation(fields: [menuItemId], references: [id], onDelete: Cascade)
  buffetCategory   Category @relation(fields: [buffetCategoryId], references: [id], onDelete: Cascade)

  @@unique([menuItemId, buffetCategoryId])
  @@index([menuItemId])
  @@index([buffetCategoryId])
}
