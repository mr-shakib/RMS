// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Can be switched to "postgresql" by changing this value
  url      = env("DATABASE_URL")
}

// Models
model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String   // bcrypt hashed
  role      String   @default("WAITER") // ADMIN, WAITER, CHEF
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Table {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  qrCodeUrl String
  status    String   @default("FREE") // FREE, OCCUPIED, RESERVED
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id                    String            @id @default(uuid())
  name                  String            @unique
  isBuffet              Boolean           @default(false) // Special flag for buffet categories
  buffetPrice           Float?            // Price for buffet (if isBuffet is true)
  sortOrder             Int               @default(0) // For custom ordering
  primaryMenuItems      MenuItem[]        @relation("PrimaryCategory")
  secondaryMenuItems    MenuItem[]        @relation("SecondaryCategory")
  orders                Order[]           // Orders that selected this buffet category
  printerMappings       PrinterCategory[]
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt

  @@index([sortOrder])
}

model MenuItem {
  id                  String      @id @default(uuid())
  name                String
  categoryId          String
  category            Category    @relation("PrimaryCategory", fields: [categoryId], references: [id])
  secondaryCategoryId String?     // For buffet items that also appear in All Items menu
  secondaryCategory   Category?   @relation("SecondaryCategory", fields: [secondaryCategoryId], references: [id])
  price               Float       // Stored as Float for SQLite compatibility
  description         String?
  imageUrl            String?
  available           Boolean     @default(true)
  orderItems          OrderItem[]
  createdAt           DateTime    @default(now())
  updatedAt           DateTime    @updatedAt

  @@index([categoryId])
  @@index([secondaryCategoryId])
  @@index([available])
}

model Order {
  id               String      @id @default(uuid())
  tableId          Int
  table            Table       @relation(fields: [tableId], references: [id])
  status           String      @default("PENDING") // PENDING, PREPARING, READY, SERVED, PAID, CANCELLED
  isBuffet         Boolean     @default(false) // Flag for buffet orders
  buffetCategoryId String?     // Reference to buffet category if isBuffet is true
  buffetCategory   Category?   @relation(fields: [buffetCategoryId], references: [id])
  subtotal         Float
  tax              Float
  discount         Float       @default(0)
  serviceCharge    Float       @default(0)
  tip              Float       @default(0)
  total            Float
  items            OrderItem[]
  payment          Payment?
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt

  @@index([tableId])
  @@index([status])
  @@index([createdAt])
  @@index([buffetCategoryId])
}

model OrderItem {
  id         String   @id @default(uuid())
  orderId    String
  order      Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  menuItemId String
  menuItem   MenuItem @relation(fields: [menuItemId], references: [id])
  quantity   Int
  price      Float
  notes      String?
  createdAt  DateTime @default(now())

  @@index([orderId])
}

model Payment {
  id        String   @id @default(uuid())
  orderId   String   @unique
  order     Order    @relation(fields: [orderId], references: [id])
  amount    Float
  method    String   // CASH, CARD, WALLET
  reference String?
  createdAt DateTime @default(now())

  @@index([createdAt])
}

model Setting {
  key       String   @id
  value     String
  updatedAt DateTime @updatedAt
}

model Printer {
  id                String            @id @default(uuid())
  name              String            // User-friendly name like "Kitchen Printer", "Bar Printer"
  type              String            // network, usb, serial
  address           String?           // IP address for network printers
  port              String?           // Port for network printers (default 9100)
  vendorId          String?           // Vendor ID for USB printers
  productId         String?           // Product ID for USB printers
  serialPath        String?           // Path for serial printers
  isActive          Boolean           @default(true)
  sortOrder         Int               @default(0)
  categoryMappings  PrinterCategory[]
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  @@index([isActive])
  @@index([sortOrder])
}

model PrinterCategory {
  id         String   @id @default(uuid())
  printerId  String
  printer    Printer  @relation(fields: [printerId], references: [id], onDelete: Cascade)
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())

  @@unique([printerId, categoryId])
  @@index([printerId])
  @@index([categoryId])
}
