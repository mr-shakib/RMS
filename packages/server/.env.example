# Server Configuration
NODE_ENV=development
SERVER_PORT=5000

# Database
# SQLite (local development)
DATABASE_URL="file:./prisma/dev.db"

# PostgreSQL (production)
# DATABASE_URL="postgresql://user:password@localhost:5432/restaurant_db"

# Authentication
# ⚠️ IMPORTANT: Generate a secure secret for production!
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET="your-secret-key-change-in-production"

# Business Settings (Optional - can be set via UI)
BUSINESS_NAME="My Restaurant"
TAX_PERCENTAGE=10
CURRENCY=USD

# Logging (Optional)
LOG_LEVEL=info
# LOG_FILE=./logs/app.log

# CORS (Optional - auto-configured in development)
# CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Printer (Optional - can be set via UI)
# PRINTER_TYPE=network
# PRINTER_ADDRESS=192.168.1.50:9100
